<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<setting name="useGeneratedKeys" value="true" />
		<!-- <setting name="as" value=""/> -->
	</settings>

	<typeHandlers>
		<typeHandler handler="com.demo.mybatis.sample.bean.RoleTypeHandler" javaType="com.demo.mybatis.sample.bean.Role" />
	</typeHandlers>

	<!-- -->
	<plugins>
		<plugin interceptor="com.demo.orm.mybatis.support.ResultSetHandlerInterceptor" />
		<plugin interceptor="com.demo.orm.mybatis.support.StatementHandlerInterceptor" />
	</plugins>

	<mappers>
		<mapper resource="mapper/user.xml" />
	</mappers>

</configuration> 
    